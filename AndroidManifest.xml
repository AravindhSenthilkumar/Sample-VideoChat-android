<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.quickblox.AndroidVideoChat"
          android:versionCode="1"
          android:versionName="1.0"
          android:installLocation="auto">

    <uses-sdk android:minSdkVersion="7"/>
    <application android:label="@string/app_name">
        <activity
                android:name=".MyActivity"
                android:label="@string/app_name"
                android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>


        <!--<service android:name=".websockets.ChatService">-->
            <!--<intent-filter>-->
                <!--<action android:name="com.example.WebSocketsSimpleChat.START_CHAT"></action>-->
                <!--<action android:name="com.example.WebSocketsSimpleChat.STOP_CHAT"></action>-->
                <!--<action android:name="com.example.WebSocketsSimpleChat.SEND_MESSAGE"></action>-->
            <!--</intent-filter>-->
        <!--</service>-->


        <service android:name=".websockets.BinaryChatServerService">
            <intent-filter>
                <action android:name="com.example.WebSocketsSimpleChat.START_SERVER"></action>
                <action android:name="com.example.WebSocketsSimpleChat.STOP_CHAT"></action>
                <action android:name="com.example.WebSocketsSimpleChat.SEND_MESSAGE"></action>
            </intent-filter>
        </service>

        <service android:name=".websockets.BinaryChatService">
            <intent-filter>
                <action android:name="com.example.WebSocketsSimpleChat.START_CHAT"></action>
                <action android:name="com.example.WebSocketsSimpleChat.STOP_CHAT"></action>
                <action android:name="com.example.WebSocketsSimpleChat.SEND_MESSAGE"></action>
            </intent-filter>
        </service>
    </application>

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.FLASHLIGHT"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature android:name="android.hardware.camera.autofocus"/>
    <uses-feature android:name="android.hardware.camera.flash"/>

    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>
</manifest> 
